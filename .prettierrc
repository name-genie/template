{
    "overrides": [
        {
            "files": ["*.js", "*.ts"],
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "semi": false,
                "singleQuote": true,
                "bracketSpacing": true,
                "printWidth": 180,
                "trailingComma": "none",
                "arrowParens": "avoid"
            }
        },
        {
            "files": ["*.yml", "*.yaml", "*.json"],
            "options": {
                "tabWidth": 2,
                "useTabs": false
            }
        }
    ]
}
